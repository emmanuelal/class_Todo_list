<div class="container">
	<div class="row">
		<div class="col-md-8">
<p id="notice"><%= notice %></p>
<div class="page-header">
  <h1>TodoList <small>item</small></h1>
</div>
<div class="holder">
  <strong>Title:</strong>
  <p id ="title"><%= @todo_item.title %></p>
</div>

<div class="holder">
  <strong>Due date:</strong>
  <p id ="due"><%= @todo_item.due_date %></p>
</div>

<div class="holder">
  <strong>Description:</strong>
  <p id ="description"><%= @todo_item.description %></p>
</div>

<% if @todo_item.completed  %>
<div>
  <strong>Completed:</strong>
  <%= @todo_item.completed %>
</div>
<% end %>
<br/>
<%= link_to 'Edit', edit_todo_list_todo_item_path(@todo_list, @todo_item),:class=>"btn btn-primary" %>
<%= link_to 'Back', @todo_list ,:class=>"btn btn-primary" %>
</div>
</div>
</div>